<%= attribute_tag :website, link_to(attributes.url, attributes.url) if attributes.url? %>
<%= attribute_tag :telephone, attributes.telephone %>
<%= attribute_tag :fax, attributes.fax %>
<%= attribute_tag :email, mail_to(attributes.email, attributes.email, :encode => "javascript", :class => 'email') if attributes.email? %>
<%= attribute_tag :address, attributes.address %>
