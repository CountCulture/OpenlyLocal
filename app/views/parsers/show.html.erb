<h1><%= @parser.title %></h1>
<p><%= link_to "All Scrapers", scrapers_path %></p>
<%= render :partial =>  (@parser.is_a?(CsvParser) ? 'csv_parser' : 'parser'), :object => @parser %>

<h3>Scrapers</h3>
<p>
  <%= link_to("Create new scraper for this parser", new_scraper_path(:parser_id => @parser.id, :type => @parser.scraper_type, :result_model => @parser.result_model)) %>
</p>

<% unless @scrapers.blank? %>
  <h3><%= @scrapers.size %> existing scrapers</h3>
  <ul id="scrapers">
    <% for scraper in @scrapers %>
      <li><%= link_for scraper %></li>
    <% end %>
  </ul>
<% end %>

