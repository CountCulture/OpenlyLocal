<h1><%= link_for @dataset %></h1>
<div id="dataset_data">
  <% if @datapoint.blank? %>
    <p class="alert">Sorry, no data found for <%= link_for @council %></p>
  <% else %>
    <table>
      <caption><%= link_for @dataset %> :: data for <%= link_for @council %></caption>
      <tr>    
        <%- for column in @datapoint.data[0] -%>
          <th><%= column %></th>
        <%- end -%>
      </tr>
      <tr>    
        <%- for column in @datapoint.data[1] -%>
          <td><%= column %></td>
        <%- end -%>
      </tr>
    </table>
  <% end %>
</div>
