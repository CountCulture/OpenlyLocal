<%= error_messages_for :dataset %>

<% form_for @dataset do |f| -%>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :originator %>
    <%= f.text_field :originator %>
  </p>
  <p>
    <%= f.label :originator_url %>
    <%= f.text_field :originator_url %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :licence %>
    <%= f.select :licence, Licences.collect{ |k,v| [v.first, k] }, :include_blank => true %>
  </p>
  <p>
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.label :dataset_topic_grouping_id %>
    <%= f.select :dataset_topic_grouping_id, DatasetTopicGrouping.all.collect{ |g| [g.title, g.id] }, :include_blank => true %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end -%>