<h4 class="owner"><%= basic_link_for @council %>:</h4>
<h1><%= @title %> for <%= basic_link_for @council %></h1>
<%- form_tag documents_path, :method => 'get', :id => 'document_search' do -%>
  <strong>Restrict to documents containing</strong> <%= text_field_tag 'term', params[:term] %>
  <%= hidden_field_tag 'council_id', params[:council_id] %>
  <%= submit_tag 'Submit' %>
<%- end -%>
<div id="documents">
  <%= list_all @documents, :extended => true %>
</div>
<%= render :partial => '/shared/api_info' %>