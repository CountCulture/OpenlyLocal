<%= render :partial => 'shared/experimental_flash' %>
<h1><%= @company.title %></h1>

<dl id="main_attributes" class="attributes">
  <%= render :partial => 'attributes', :object => @company %>
</dl>

<%- unless @company.spending_stat.blank? -%>
  <%= render :partial => 'spending_dashboard' %>
<%- end -%>

<div id="relationships">
  <h3>Supplier to:</h3>
  <ul>
    <%- @company.supplying_relationships.each do |supplier| -%>
      <li><strong><%= link_for supplier, :text => supplier.organisation.title %></strong> Total spend: <span class='value'>£<%= number_with_delimiter(supplier.total_spend.to_i) %>, Average monthly spend £<%= number_with_delimiter(supplier.average_monthly_spend.to_i) %></span></li>
      <%- end -%>
  </ul>
</div>

<%= timestamp_data_for @company %>

<%= render :partial => '/shared/api_info' %>