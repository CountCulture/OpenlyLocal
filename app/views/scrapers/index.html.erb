<h1>Councils with scrapers</h1>
<div id="councils">
  <%- for council in @councils -%>
    <%- div_for council do -%>
      <h3><%= link_for council, :name => dom_id(council) %> <em><%= council_page_for council %> &nbsp;&nbsp;<%= link_to "edit", edit_council_path(council) %></em></h3>
      <%= content_tag(:p, "<strong>Portal System</strong> " + link_for(council.portal_system)) if council.portal_system %>
      <ul>
        <%- for scraper_link in scraper_links_for_council(council) -%>
          <li><%= scraper_link %></li>
        <%- end -%>
      </ul>
    <%- end -%>
  <%- end -%>
</div>