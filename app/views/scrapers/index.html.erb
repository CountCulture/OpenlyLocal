<h1>Scrapers</h1>
<div id="councils">
  
  <div id="without_scrapers">
    <h3>Councils without scrapers</h3>
    <%- for council in @councils_without_scrapers -%>
      <%- div_for council do -%>
        <h4><%= link_for council, :name => dom_id(council) %></h4>
        <p>
          <%= "<strong>Portal System</strong> #{link_for(council.portal_system)}<br />" if council.portal_system %>
          <%= council_page_for council %> :: 
          <%= link_to "edit", edit_council_path(council) %> :: <%= link_to "Show possible scrapers", "#", :class => "show_possible_scrapers" %>
        </p>
        <ul style="display:none" class="possible_scrapers">
          <%- for scraper_link in scraper_links_for_council(council) -%>
            <li><%= scraper_link %></li>
          <%- end -%>
        </ul>
      <%- end -%>
    <%- end -%>
  </div>

  <div id="with_scrapers">
    <%- for council in @councils_with_scrapers -%>
      <%- div_for council do -%>
        <h3><%= link_for council, :name => dom_id(council) %> <em><%= council_page_for council %> &nbsp;&nbsp;<%= link_to "edit", edit_council_path(council) %></em></h3>
        <%= content_tag(:p, "<strong>Portal System</strong> " + link_for(council.portal_system)) if council.portal_system %>
        <ul>
          <%- for scraper_link in scraper_links_for_council(council) -%>
            <li><%= scraper_link %></li>
          <%- end -%>
        </ul>
      <%- end -%>
    <%- end -%>
  </div>

</div>
