<%= error_messages_for :hyperlocal_site %>

<% form_for @hyperlocal_site do |f| -%>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :feed_url %>
    <%= f.text_field :feed_url %>
  </p>
  <p>
    <%= f.label :email, "Email <em>we may need to contact you</em>" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :twitter_account %>
    <%= f.text_field :twitter_account %>
  </p>
  <p>
    <%= f.label :hyperlocal_group_id %>
    <%= f.select :hyperlocal_group_id, HyperlocalGroup.all.collect{ |g|[g.title, g.id] }, { :include_blank => true } %>
  </p>
  <p>
    <%= f.label :platform %>
    <%= f.select :platform, HyperlocalSite::PossiblePlatforms, { :include_blank => true } %>
  </p>
  <fieldset id="hyperlocal_sites_location">
    <legend>Area covered by this site</legend>
    <p>
      <%= f.label :area_covered, "Area Covered <em>(in words - keep it short)</em>" %>
      <%= f.text_field :area_covered %>
    </p>
    <p>
      <%= f.label :country %>
      <%= f.select :country, AllowedCountries, { :include_blank => true } %>
    </p>
    <p>
      <%= f.label :lat, "Latitude" %>
      <%= f.text_field :lat %>
    </p>
    <p>
      <%= f.label :lng, "Longitude" %>
      <%= f.text_field :lng %>
    </p>
    <p>
      <%= f.label :distance, "Distance from centre point covered (km)" %>
      <%= f.text_field :distance %>
    </p>
  </fieldset>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end -%>