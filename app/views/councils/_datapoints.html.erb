<div id="datapoints">
  <h4>Statistics</h4>
  <%- for datapoint in @datapoints -%>
    <%- div_for datapoint do -%>
      <%= link_to "more data", data_dataset_path(:id => datapoint.dataset, :council_id => @council.id), :class => "more_info" %>
      <div class="citation"><%= link_to datapoint.dataset.title, datapoint.dataset %></div>
      <div class="data"><div class="description"><%= datapoint.summary[0] %></div> <div class="value"><%= datapoint.summary[1] %></div></div> 
    <%- end -%>
  <%- end -%>
</div>
