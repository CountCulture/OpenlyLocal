<h1>Payment <%= @financial_transaction.uid if @financial_transaction.uid? %></h1>
<dl id="main_attributes" class="attributes">
  <%= attribute_tag :from, link_for(@supplier.organisation) %>
  <%= attribute_tag :to, link_for(@supplier) %>
  <%= attribute_tag :for, "Â£#{number_with_precision(@financial_transaction.value, :precision => 2, :delimiter => ',')}" %>
  <%= attribute_tag :on, @financial_transaction.date.to_date.to_s(:event_date) %>
  <%= attribute_tag :source, link_to(@financial_transaction.source_url, @financial_transaction.source_url) if @financial_transaction.source_url? %>
</dl>



